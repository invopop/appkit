package appkit

templ P() {
	<p class="text-base text-neutral-800">
		{ children... }
	</p>
}

templ Title() {
	<h1 class="text-black text-2xl font-semibold">
		{ children... }
	</h1>
}

templ Subtitle() {
	<h2 class="text-base text-neutral-800 font-medium">
		{ children... }
	</h2>
}

templ Info() {
	<div class="text-sm text-neutral-500 flex items-center gap-1">
		<div>
			@InfoIcon()
		</div>
		<div class="ui-info-content flex-1">
			{ children... }
		</div>
	</div>
}

templ Mark() {
	<mark class="border border-neutral-200 bg-neutral-50 rounded text-sm text-neutral-500 px-1 py-0.5 inline-flex">
		{ children... }
	</mark>
}

templ Prose() {
	<div class="prose prose-slate mx-auto lg:prose-lg">
		{ children... }
	</div>
}
